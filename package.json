{
  "name": "neatnote",
  "version": "1.0.3",
  "description": "A lightweight note-taking application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "node build-cleanup.js",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3",
    "pkg": "^5.8.1"
  },
  "build": {
    "appId": "com.example.neatnote",
    "productName": "NeatNote",
    "files": [
      "src/**/*",
      "assets/**/*",
      "index.html",
      "installer/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true,
      "perMachine": false,
      "menuCategory": "NeatNote", 
      "shortcutName": "NeatNote",
      "include": "installer/win/custom-installer.nsh"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}